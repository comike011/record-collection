<%= form_for(album, url: {action: action}) do |f| %>
  <%= f.hidden_field :artist_id%>
  <div class="columns">
    <div class="column is-half">
      <div class="field">
        <%= f.label :title, value: "Title", class: "label" %>
        <div class="control">
          <%= f.text_field :title, class: "input" %>
        </div>
      </div>
    </div>
  </div>

  <div class="columns">
    <div class="column is-2">
      <div class="field">
        <%= f.label :year, value: "Year", class: "label inline" %>
        <div class="control">
          <div class="select">
            <%= f.select :year, (Time.zone.now.year - 100)..(Time.zone.now.year + 1), class: "input inline" %>
          </div>
        </div>
      </div>
    </div>
