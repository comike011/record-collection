<div class="columns">
  <div class="column is-11">
    <h1 class="title">Artists</h1>
  </div>
</div>
<div class="columns">
  <div class="column">
    <%= link_to "Add Artist", new_artist_path %>
  </div>
</div>
<div class="columns">
  <div class="column is-11">
    <table class="table is-striped is-fullwidth">
      <thead>
        <tr>
          <th>Artist</th>
          <th>Albums</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @artists.each do |artist| %>
          <tr>
            <td><%= artist.name %></td>
            <td>
              <% artist.albums.each do |album| %>
                <p><%= album.title %></p>
              <% end %>
            </td>
            <td>
              <%= link_to 'View by Albums', artist_albums_path(artist.id) %><br />
              <%= link_to 'Add Album', new_artist_album_path(artist.id) %><br />
              <%= link_to 'Edit Artist', edit_artist_path(artist.id) %><br />
              <%= link_to 'Delete', artist_path(artist), method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
