<%= form_for(artist) do |f| %>
  <div class="field">
    <%= f.label :name, value: "Artist Name", class: "label" %>
    <div class="control">
      <%= f.text_field :name, class: "input" %>
    </div>
  </div>
  <div class="field is-grouped">
    <div class="control">
       <%= f.submit "Save", class: "button is-primary" %>
    </div>
  </div>
<% end %>
